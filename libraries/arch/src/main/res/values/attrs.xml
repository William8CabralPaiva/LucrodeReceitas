<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ArchTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/design_orange</item>
        <item name="boxStrokeWidth">2dp</item>
    </style>

    <declare-styleable name="ArchBorderInputView">
        <attr name="arch_drawable_top" format="reference" />
        <attr name="arch_ei_label" format="string" />

        <attr name="arch_ei_type" format="enum">
            <enum name="text" value="0" />
            <enum name="password" value="1" />
            <enum name="number" value="2" />
            <enum name="real" value="3" />
        </attr>
    </declare-styleable>

    <declare-styleable name="ArchProgressRing">
        <attr name="arch_pr_progress" format="integer" />
        <attr name="arch_pr_progressbar_color" format="color" />
        <attr name="arch_pr_background_progressbar_color" format="color" />
        <attr name="arch_pr_progressbar_width" format="dimension" />
        <attr name="arch_pr_background_progressbar_width" format="dimension" />
        <attr name="arch_pr_tick_color" format="color" />
    </declare-styleable>

    <declare-styleable name="ArchActionButton">
        <attr name="arch_ab_enabled" format="boolean" />
        <attr name="arch_ab_text" format="string" />
        <attr name="arch_ab_color" format="enum">
            <enum name="orange" value="0" />
            <enum name="blue" value="1" />
        </attr>
    </declare-styleable>

    <declare-styleable name="ArchRecipeSpinner">
        <attr name="arch_rs_hint_text" format="string" />
    </declare-styleable>

    <style name="ArchTextLabel" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">14sp</item>
    </style>
</resources>