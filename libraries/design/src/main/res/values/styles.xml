<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="DesignAlertDialogTheme" parent="@style/Theme.AppCompat.Light.Dialog.Alert">
        <item name="dialogCornerRadius">16dp</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/DesignAlert.Button.Positive</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/DesignAlert.Button.Negative</item>
    </style>
<!--android:Widget-->
    <style name="DesignAlert.Button.Positive" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:textColor">@color/design_white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/design_bg_solid_orange</item>
        <item name="backgroundTint">@color/design_orange</item>
    </style>

    <style name="DesignAlert.Button.Negative" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/design_orange</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>