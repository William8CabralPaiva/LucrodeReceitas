<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="DesignAlertDialogTheme" parent="@style/Theme.AppCompat.Light.Dialog.Alert">
        <item name="dialogCornerRadius">16dp</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/DesignAlert.Button.Positive</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/DesignAlert.Button.Negative</item>
    </style>
    <!--android:Widget-->
    <style name="DesignAlert.Button.Positive" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:textColor">@color/design_white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/design_bg_solid_orange</item>
        <item name="backgroundTint">@color/design_orange</item>
    </style>

    <style name="DesignAlert.Button.Negative" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/design_orange</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="DesignHandWriting" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/design_black</item>
        <item name="android:lineSpacingExtra">18sp</item>
        <item name="fontFamily">@font/design_dancing_script_bold</item>
    </style>

    <style name="DesignCostsDescription" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">18sp</item>
        <item name="android:lineSpacingExtra">18sp</item>
        <item name="fontFamily">@font/design_ubuntu</item>
        <item name="android:textStyle">bold</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="DesignTitle" parent="Widget.AppCompat.TextView">
        <item name="android:gravity">center</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:fontFamily">@font/design_bangers</item>
        <item name="android:textColor">@color/design_orange</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textAlignment">center</item>
    </style>


</resources>